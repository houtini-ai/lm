{
  "name": "@richardbaxterseo/local-llm-mcp",
  "version": "3.0.0",
  "description": "MCP server for offloading tasks to local LLMs via LM Studio SDK - now with context-aware prompts and 5 new tools",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "local-llm-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "MIGRATION_GUIDE.md",
    "SECURITY_CONFIG.md",
    "TROUBLESHOOTING.md",
    "test-connection.mjs",
    "claude_config_example.json"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test:connection": "node test-connection.mjs",
    "test:integration": "node tests/integration.test.mjs",
    "test:tools": "node tests/tools.test.mjs",
    "test": "npm run test:connection && npm run test:tools",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "local-llm",
    "lm-studio",
    "claude",
    "ai",
    "assistant",
    "context-preservation"
  ],
  "author": "Richard Baxter <richard@richardbaxter.co> (https://richardbaxter.co)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardbaxterseo/local-llm-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/richardbaxterseo/local-llm-mcp/issues"
  },
  "homepage": "https://github.com/richardbaxterseo/local-llm-mcp#readme",
  "dependencies": {
    "@lmstudio/sdk": "^1.5.0",
    "@modelcontextprotocol/sdk": "^1.17.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
