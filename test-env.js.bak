#!/usr/bin/env node

// Simple test script to check environment variables
console.log('=== Environment Variable Test ===');
console.log('LM_STUDIO_URL:', process.env.LM_STUDIO_URL || 'NOT SET');
console.log('LLM_MCP_ALLOWED_DIRS:', process.env.LLM_MCP_ALLOWED_DIRS || 'NOT SET');
console.log('NODE_VERSION:', process.version);
console.log('CURRENT_DIR:', process.cwd());
console.log('ALL ENV VARS STARTING WITH LLM_:');

// List all environment variables that start with LLM_
Object.keys(process.env)
  .filter(key => key.startsWith('LLM_'))
  .forEach(key => {
    console.log(`  ${key}:`, process.env[key]);
  });

console.log('=== End Test ===');
